<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/menu_item_view"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="@dimen/menu_item_margin_top"
    android:layout_marginBottom="@dimen/menu_item_margin_bottom">>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height_size"
        android:background="@drawable/menu_item_background_gradient"
        android:layout_gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIndexList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Line 1"
            android:layout_marginEnd="@dimen/margin_end_menu_item_text_view"
            android:layout_marginStart="@dimen/margin_start_menu_item_text"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:textSize="@dimen/menu_item_text_size" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>